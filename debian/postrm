#!/bin/sh
# postrm script for pyramid-chameleon
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    purge|remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
	# Drop db and user pet
	echo "Dropping database pet and user pet..."
	sudo su postgres -c "dropdb pet"
	sudo su postgres -c "dropuser pet"
	echo "Database and User pet deleted"
	
	# Restore beckups of original files
	echo "Restoring original files..."
	sudo rm /etc/hosts
	mv /etc/hosts.bac /etc/hosts

	sudo rm /etc/postgresql/9.4/main/postgresql.conf
	mv /etc/postgresql/9.4/main/postgresql.conf.bac /etc/postgresql/9.4/main/postgresql.conf
	
	sudo rm /etc/postgresql/9.4/main/pg_hba.conf
	mv /etc/postgresql/9.4/main/pg_hba.conf.bac /etc/postgresql/9.4/main/pg_hba.conf
	sudo service postgresql restart
	echo "Files restored."
	
	# Remove directory pet
	sudo rm -rf /usr/bin/pet
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
