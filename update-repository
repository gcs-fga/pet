import pet.models
import pet.update

import argparse
import sys


def main(argv):
    parser = argparse.ArgumentParser(description='update a repository')
    parser.add_argument('-f', '--force', action='store_true', default=False)
    parser.add_argument('repositories', nargs='+')
    options = parser.parse_args(argv[1:])

    session = pet.models.Session()

    try:
        for repo_id in options.repositories:
            repos = session.query(
                pet.models.Repository).filter_by(id=repo_id).all()
            for repo in repos:
                print "I: Updating repository {0}".format(repo.name)
                updater = pet.update.RepositoryUpdater(
                    repo, force=options.force)
                updater.run()
        session.commit()
    except KeyboardInterrupt:
        print "E: Interrupted."
        session.commit()
    except:
        session.rollback()
        raise

if __name__ == '__main__':
    main(sys.argv)
